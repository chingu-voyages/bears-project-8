{
	"name": "bears-project-8",
	"description": "Chingu Voyage Project",
	"version": "0.0.2",
	"main": "server.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chingu-voyages/bears-project-8.git"
	},
	"author": "Bears Team 8",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/chingu-voyages/bears-project-8/issues"
	},
	"homepage": "https://github.com/chingu-voyages/bears-project-8#readme",
	"dependencies": {
		"bcrypt": "^3.0.2",
		"body-parser": "^1.18.3",
		"dotenv": "^6.2.0",
		"eslint": "5.6.0",
		"express": "^4.16.4",
		"gravatar": "^1.8.0",
		"jest": "^23.6.0",
		"jsonwebtoken": "^8.4.0",
		"mongoose": "^5.3.15",
		"morgan": "^1.9.1",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"supertest": "^3.3.0",
		"validator": "^10.9.0"
	},
	"devDependencies": {
		"concurrently": "^4.1.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^3.3.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-prettier": "^3.0.0",
		"husky": "^1.2.0",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.7",
		"prettier": "^1.15.3"
	},
	"scripts": {
		"test": "NODE_ENV=test PORT=8081 jest --detectOpenHandles",
		"start": "node server.js",
		"server": "nodemon server.js --ignore __tests__",
		"client": "npm run start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test && lint-staged && git add --all"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"prettier --config .prettierrc --write"
		]
	},
	"jest": {
		"verbose": true,
		"testEnvironment": "node",
		"testURL": "http://localhost/",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"testSetup.js",
			"client/"
		],
		"setupTestFrameworkScriptFile": "./__tests__/testSetup.js"
	}
}